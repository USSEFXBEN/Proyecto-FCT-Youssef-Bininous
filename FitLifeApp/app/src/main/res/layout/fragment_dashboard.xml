<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".view.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Usuario -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHeaderUsuario"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="@drawable/bg_gradient_fitlife">

                <TextView
                    android:id="@+id/tvTituloPanelUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Panel de Usuario"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tvSaludoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola, Juan PÃ©rez ðŸ‘‹"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tvMensajeDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¡Hagamos de hoy un dÃ­a increÃ­ble!"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_below="@id/tvSaludoUsuario"
                    android:layout_marginTop="4dp" />

                <ImageButton
                    android:id="@+id/btnLogout"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_heart"
                    android:contentDescription="Cerrar sesiÃ³n"
                    android:padding="4dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progreso Semanal -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProgresoSemanal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardHeaderUsuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTituloProgreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso Semanal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/ivProgresoCircular"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_progress_88"
                        android:contentDescription="Progreso" />

                    <TextView
                        android:id="@+id/tvProgresoTexto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Â¡Excelente trabajo! Â¡Sigue asÃ­!"
                        android:textSize="12sp"
                        android:textColor="#333333" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rutinas de Hoy -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRutinasHoy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardProgresoSemanal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvRutinasHoyTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rutinas de Hoy"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRutinas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
