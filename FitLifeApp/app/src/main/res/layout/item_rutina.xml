<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/layoutItemRutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icono de estado -->
        <ImageView
            android:id="@+id/ivEstadoRutina"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_radio_button_off"
            android:contentDescription="Estado de rutina"
            app:tint="#CCCCCC" />

        <!-- Contenedor de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtNombreRutina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de rutina"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHoraRutina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 AM · Lun, Mar"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txtDescripcionRutina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción de rutina"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
