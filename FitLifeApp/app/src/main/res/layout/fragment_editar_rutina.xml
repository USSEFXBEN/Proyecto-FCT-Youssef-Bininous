<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_fitlife"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTituloEditarRutina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Rutina"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardEditarRutina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvTituloEditarRutina"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Los mismos campos que en crear, pero se rellenan desde el Fragment -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la rutina"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etNombreRutinaEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:hint="Ej: Ejercicio matutino"
                    android:inputType="textCapSentences"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Descripción"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etDescripcionRutinaEdit"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_edittext_rounded"
                    android:gravity="top"
                    android:hint="Ej: 30 minutos de cardio suave"
                    android:inputType="textMultiLine"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Hora"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvHoraSeleccionadaEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sin hora"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnSeleccionarHoraEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Cambiar"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:backgroundTint="@color/fitlife_green" />
                </LinearLayout>

                <!-- Días activos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Días activos"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbLunesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lun" />

                    <CheckBox
                        android:id="@+id/cbMartesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mar" />

                    <CheckBox
                        android:id="@+id/cbMiercolesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mié" />

                    <CheckBox
                        android:id="@+id/cbJuevesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jue" />

                    <CheckBox
                        android:id="@+id/cbViernesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vie" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cbSabadoEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sáb" />

                    <CheckBox
                        android:id="@+id/cbDomingoEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dom" />
                </LinearLayout>

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEliminarRutina"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Eliminar"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:backgroundTint="@android:color/holo_red_light" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancelarEditar"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Cancelar"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:backgroundTint="@color/light_gray_bg"
                            android:textColor="@color/text_dark" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="1dp" />

                        <Button
                            android:id="@+id/btnGuardarCambios"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Guardar"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:backgroundTint="@color/fitlife_green" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
